{
  "manifest_version": 3,
  "name": "Donna",
  "description": "Improve your writing with Donna's AI. We will hep you with content generation, spell check, grammar check, punctuation check, and more. ",
  "version": "1.0.0",
  "action": { "default_popup": "index.html" },
  "permissions": ["contextMenus", "scripting"],
  "icons": {
    "16": "src/assets/menu-icon.png",
    "96": "src/assets/woman_96_96.png"
  },
  "content_scripts": [
    {
      "js": ["src/content.tsx"],
      "matches": [
        "https://www.google.com/*",
        "https://www.mail.google.com/*",
        "*://*/*"
      ]
    }
  ],
  "background": {
    "service_worker": "src/background.ts"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/assets/woman_96_96.png"],
      "matches": [ "*://*/*" ]
    }
  ]
}
